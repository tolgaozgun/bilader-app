<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.breakdown.bilader">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.Bilader">

        <activity android:name=".controllers.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controllers.VerificationActivity"/>
        <activity android:name=".controllers.BiltraderActivity"/>
        <activity android:name=".controllers.RegisterActivity"/>
        <activity android:name=".controllers.ProductActivity"/>
        <activity android:name=".controllers.ForgotPasswordActivity"/>
        <activity android:name=".controllers.ChangePasswordActivity"/>
        <activity android:name=".controllers.FollowersActivity"/>
        <activity android:name=".controllers.FollowingActivity"/>
        <activity android:name=".controllers.MyProductsActivity"/>
        <activity android:name=".controllers.OthersProfileActivity"/>
        <activity android:name=".controllers.SettingsActivity"/>
        <activity android:name=".controllers.PrivateChatActivity"/>

        <service
            android:name=".adapters.NotificationService"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>