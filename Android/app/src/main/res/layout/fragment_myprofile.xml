<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_myprofile_avatar"
        android:layout_width="81dp"
        android:layout_height="73dp"
        android:layout_marginStart="44dp"
        android:layout_marginLeft="44dp"
        android:layout_marginTop="76dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avatar_male" />

    <TextView
        android:id="@+id/text_myprofile_fullname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="76dp"
        android:text="Yahya Demirel"
        app:layout_constraintStart_toEndOf="@+id/image_myprofile_avatar"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/myProductsButton"
        android:layout_width="260dp"
        android:layout_height="41dp"
        android:layout_marginTop="96dp"
        android:background="@drawable/product"
        android:fontFamily="@font/roboto_bold"
        android:gravity="start"
        android:paddingVertical="9dp"
        android:paddingStart="40dp"
        android:paddingLeft="35dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        android:hint="My products"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_myprofile_avatar" />

    <Button
        android:id="@+id/followingButton"
        android:layout_width="260dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/following"
        android:fontFamily="@font/roboto_bold"
        android:foregroundGravity="left"
        android:gravity="left"
        android:hint="My Followings"
        android:paddingVertical="9dp"
        android:paddingStart="40dp"
        android:paddingLeft="35dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/followersButton" />

    <TextView
        android:id="@+id/logOutButton"
        android:layout_width="260dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/log_out"
        android:fontFamily="@font/roboto_bold"
        android:text="Log out"
        android:paddingVertical="9dp"
        android:paddingStart="40dp"
        android:paddingLeft="35dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settingButton" />

    <TextView
        android:id="@+id/settingButton"
        android:layout_width="260dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/settings"
        android:fontFamily="@font/roboto_bold"
        android:gravity="start"
        android:paddingVertical="9dp"
        android:paddingStart="40dp"
        android:paddingLeft="35dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        android:text="Settings"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/followingButton" />

    <Button
        android:id="@+id/followersButton"
        android:layout_width="260dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/following"
        android:fontFamily="@font/roboto_bold"
        android:gravity="left"
        android:hint="My Followers"
        android:paddingVertical="9dp"
        android:paddingStart="40dp"
        android:paddingLeft="40dp"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/myProductsButton" />

</androidx.constraintlayout.widget.ConstraintLayout>